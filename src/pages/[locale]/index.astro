---
import BaseLayout from "../../layouts/BaseLayout.astro";
import Greeting from "../../components/Greeting";
import HomeCarousel from "../../components/HomeCarousel.client.jsx";
export async function getStaticPaths() {
  const locales = ["en", "tc", "sc"];
  return locales.map((locale) => ({
    params: { locale },
    props: { locale },
  }));
}

const { locale } = Astro.props;
const pageTitle =
  locale === "en" ? "Homepage" : locale === "tc" ? "主頁" : "主页";
---

<BaseLayout pageTitle={pageTitle}>
  <h2>My awesome blog subtitle</h2>
  <h3>Home page</h3>
  <Greeting messages={["Hi", "Hello", "Howdy", "Hey there"]} />
  <Greeting client:load messages={["Hej", "Hallo", "Hola", "Habari"]} />
  <HomeCarousel client:load />
  <!--  hydrated component.  -->
</BaseLayout>

<!-- the client:load directive tells Astro to send and rerun its JavaScript on the client when the page loads, making the component interactive. This is called a hydrated component. -->
